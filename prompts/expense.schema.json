{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DriverExpense",
  "type": "object",
  "required": [
    "date_iso",
    "personal_or_business",
    "description",
    "amount_gbp",
    "type",
    "needs_clarification",
    "clarification_question"
  ],
  "properties": {
    "date_iso": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "personal_or_business": { "enum": ["Personal", "Business"] },
    "description": { "type": "string", "minLength": 1 },
    "amount_gbp": { "type": ["number", "null"], "minimum": 0 },
    "type": {
      "enum": [
        "Vehicle > Maintenance",
        "Vehicle > Fuel",
        "Vehicle > Parking",
        "Vehicle > Cleaning",
        "Vehicle > Tolls",
        "Vehicle > Insurance",
        "Utilities > Mobile",
        "Personal > Meals",
        "Other"
      ]
    },
    "needs_clarification": { "type": "boolean" },
    "clarification_question": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}
